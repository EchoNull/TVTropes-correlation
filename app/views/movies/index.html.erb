<h1>Listing movies</h1>

<% if @movies.any? %>
  <table border=1>
    <tr>
      <th>Name</th>
      <th>URL</th>
      <th>(X)</th>
    </tr>

    <% @movies.each do |movie| %>
      <tr>
        <td><%= link_to movie.name, movie %></td>
        <td><%= movie.url %></td>
        <td><%= link_to 'Destroy', movie, confirm: 'Are you sure?', method: :delete %></td>
      </tr>
    <% end %>
  </table>
<% else %>
  Add some movies!
<% end %>

<br />

<%= link_to 'New Movie', new_movie_path %>
