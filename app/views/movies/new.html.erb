<h2>New movie</h2>

<% if flash[:notice] %>
  <p class="notice"><%= flash[:notice] %></p>
<% end %>
<% if flash[:error] %>
  <p class="error"><%= flash[:error] %></p>
  <% if @movie.errors.any? %>
    <ul>
      <% @movie.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>
<% end %>

<%= form_for @movie do |form| %>
  <%= form.label :url %>
  <%= form.text_field :url, :size => 100 %>
  <br/>
  <%= form.submit 'Add To Database' %>
<% end %>

<%= link_to 'Back', movies_path %>
